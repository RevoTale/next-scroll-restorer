{
  "author": {
    "name": "l-you",
    "email": "l-you@revotale.com",
    "url": "https://github.com/l-you"
  },
  "version": "0.9.9",
  "name": "next-scroll-restorer",
  "main": "src/index.ts",
  "license": "MIT",
  "private": false,
  "sideEffects": false,
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "main": "index.js",
    "directory": "dist",
    "exports": {
      "./package.json": "./package.json",
      ".": {
        "import": "./index.js",
        "require": "./index.cjs",
        "types": "./index.d.ts"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RevoTale/next-scroll-restorer.git"
  },
  "type": "module",
  "scripts": {
    "build": "gbuild . && tsc --emitDeclarationOnly",
    "tsc": "tsc --noEmit",
    "changeset:version": "changeset version && git add --all",
    "changeset:publish": "changeset publish",
    "prepare": "pnpm build",
    "test": "pnpm lint && pnpm tsc && pnpm unit",
    "unit": "playwright test",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "bugs": {
    "url": "https://github.com/RevoTale/next-scroll-restorer/issues"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.13.0",
    "@types/react": "^19.0",
    "changeset": "^0.2.6",
    "eslint": "^9.19",
    "grisaia-package-builder": "^0.1.17",
    "typescript": "^5.7.3",
    "eslint-config-love": "^118.0.0"
  },
  "peerDependencies": {
    "next": "^14.0 || ^15.0",
    "react": "^18.0 || ^19.0"
  },
  "packageManager": "pnpm@9.15.0"
}
